<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.miercolesmaldito.B_Activity">

    <Button
        android:id="@+id/buttonVolver_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:text="Volver"
        app:layout_constraintBottom_toTopOf="@+id/buttonCancelar_B"
        app:layout_constraintStart_toStartOf="@+id/buttonCancelar_B"
        app:layout_constraintTop_toBottomOf="@+id/B_TextView"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/buttonCancelar_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVolver_B"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/B_TextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="99dp"
        android:text="Soy la Actividad B"
        app:layout_constraintBottom_toTopOf="@+id/buttonVolver_B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
